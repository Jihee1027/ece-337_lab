CAPI=2:
name: "u337mg204:ece337:pts_4bit:1.0.0"
description: "Wrapper for 4-bit parallel-to-serial shifter register"

filesets:
    rtl:
        files:
            - "source/pts_4bit.sv"
        file_type: systemVerilogSource
        depend:
            - "u337mg204:ece337:flex_sr"

    synth:
        depend:
            - "ece337:tech:AMI_05_LIB"
            - "u337mg204:ece337:pts_4bit_syn"

    tb:
        files:
            - "waves/pts_4bit.do": { file_type: user }
            - "waves/pts_4bit.gtkw": { file_type: user }
        file_type: systemVerilogSource
        depend:
            - "u337mg204:ece337:tb_pts_4bit"
            - "u337mg204:ece337:questafiles"

    synfiles:
        files:
            - "scripts/syn_pts_4bit.tcl"
        file_type: tclSource
        depend:
            - "u337mg204:ece337:synfiles"

targets:
    default: &default
        filesets:
            - rtl
        toplevel: pts_4bit

    sim: &sim
        <<: *default
        default_tool: verilator
        filesets_append:
            - tb
        toplevel: tb_pts_4bit
        tools:
            modelsim:
                vsim_options:
                    - -vopt
                    - -voptargs='+acc'
                    - -t ps
                    - -do "source waves.tcl ; load_wave waves/pts_4bit.do"
                    - -onfinish stop
                    - -do "set PrefSource(OpenOnFinish) 0 ; set PrefMain(LinePrefix) \"\" ; set PrefMain(colorizeTranscript) 1"
                    - -coverage
                vlog_options:
                    - +cover
            verilator:
                verilator_options:
                    - --cc
                    - --trace
                    - --main
                    - --timing
                    - --coverage
                make_options:
                    - -j

    lint:
        <<: *default
        default_tool: verilator
        filesets_append:
            - tb
        tools:
            verilator:
                mode: lint-only
                verilator_options:
                    - --timing
                    - -Wall

    syn:
        <<: *default
        filesets_append:
            - synfiles
        default_tool: design_compiler
        toplevel: pts_4bit
        tools:
            design_compiler:
                script_dir: "src/u337mg204_ece337_synfiles_0"
                dc_script: "synth.tcl"
                report_dir: "reports"
                target_library: "/home/ecegrid/a/ece337/summer24-refactor/tech/ami05/osu05_stdcells.db"
                libs: "/home/ecegrid/a/ece337/summer24-refactor/tech/ami05/osu05_stdcells.db dw_foundation.sldb"

    syn_sim:
        <<: *sim
        filesets:
            - synth
            - tb

